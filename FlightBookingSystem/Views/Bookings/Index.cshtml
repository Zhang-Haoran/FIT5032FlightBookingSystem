@model IEnumerable<FlightBookingSystem.Models.Bookings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bookings</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new { @class = "btn btn-success"})
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bookings Data
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.rating)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Flight.departure)
                                </th>
                                <th><span>actions</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.rating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Flight.departure)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary"})
                                        @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "btn btn-warning"})
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger"})
                                    </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script>
$(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });</script>